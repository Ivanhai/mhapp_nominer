<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ServerNetwork"

    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    tools:context=".ServerNetwork"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <!--    не ресиклер виев потому что да-->

    <TextView
        android:id="@+id/Network"
        android:layout_width="149dp"
        android:layout_height="19dp"
        android:text="Информация о сети"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/blocks"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:text="Количество блоков:\n"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="Сложность:\n"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/total_emission"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="Всего монет:\n"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/users"
        android:layout_width="179dp"
        android:layout_height="37dp"
        android:text="Всего пользователей:\n"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Server"
        android:paddingTop="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация о сервере"
        android:textColor="#000"
        android:textSize="16sp"
     />

    <TextView
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Использование CPU:\n"
        android:paddingTop="48dp"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="Использование RAM:\n" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Версия сервера:\n"
        android:textColor="#000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/updateServerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Update" />
</LinearLayout></ScrollView>